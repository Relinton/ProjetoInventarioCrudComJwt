@model Produto
@{
    ViewData["Title"] = "AtualizarProduto";
}

<div class="container">
    <div class="card mt-0">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <h3 class="title text-center">Atualizar Produto</h3>
                    <hr />

                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Id"></label>
                            <input class="form-control" asp-for="Id" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome"></label>
                            <input class="form-control" asp-for="Nome" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Preco"></label>
                            <input class="form-control" asp-for="Preco" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Estoque"></label>
                            <input class="form-control" asp-for="Estoque" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Imagem"></label>
                            <input class="form-control" asp-for="Imagem" />
                        </div>
                        <div class="text-center panel-body">
                            <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
                            <a asp-action="Index" class="btn btn-sm btn-outline-success">Retornar</a>
                        </div>
                    </form>

                    @if (ViewBag.Result == "Sucesso")
                    {
                        <h2>Produtos</h2>
                        <table class="table table-sm table-striped table-bordered m-2">
                            <thead><tr><th>ID</th><th>Nome</th><th>Preco</th><th>Estoque</th><th>Imagem</th></thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Id</td>
                                    <td>@Model.Nome</td>
                                    <td>@Model.Preco</td>
                                    <td>@Model.Estoque</td>
                                    <td>@Model.Imagem</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

