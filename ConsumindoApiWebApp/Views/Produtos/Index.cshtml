@model IEnumerable<Produto>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="CadastrarProduto" class="btn btn-sm btn-primary">Incluir Produto</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Estoque</th>
            <th>Imagem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Nome</td>
                <td>@r.Preco</td>
                <td>@r.Estoque</td>
                <td>@r.Imagem</td>
                <td>
                    <a asp-action="AtualizarProduto" asp-route-id="@r.Id"><img src="/icon/edit.png" /></a>
                </td>
                <td>
                    <form asp-action="DeletarProduto" method="post">
                        <input type="hidden" value="@r.Id" name="ProdutoId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



