@model Produto
@{
    ViewData["Title"] = "CadastrarProduto";
}

<div class="container">
    <div class="card mt-0">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <h3 class="title text-center">Formulário de Cadastro</h3>
                    <hr />

                    <form asp-action="CadastrarProduto" method="post">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Preco" class="control-label"></label>
                            <input asp-for="Preco" class="form-control" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Estoque" class="control-label"></label>
                            <input asp-for="Estoque" class="form-control" />
                            <span asp-validation-for="Estoque" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Imagem" class="control-label"></label>
                            <input asp-for="Imagem" class="form-control" />
                            <span asp-validation-for="Imagem" class="text-danger"></span>
                        </div>
                        <div class="text-center panel-body">
                            <button type="submit" class="btn btn-sm btn-primary">Cadastrar</button>
                            <a asp-action="Index" class="btn btn-sm btn-outline-success">Retornar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

